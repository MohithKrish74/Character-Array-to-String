package com.company;

import com.sun.jdi.Value;

import java.util.*;

public class Main
{
    public static void main(String[] args)
    {
        Scanner in =new Scanner(System.in);
        System.out.print("Enter the size of the array: ");
        int size=in.nextInt();
        char char_array[]=new char[size];
        System.out.println("Enter the Characters: ");
        for(int i=0;i<size;i++)
        {
            char character=in.next().charAt(0);
            char_array[i]=character;
        }
        System.out.println("User Entered character array "+Arrays.toString(char_array));
        String string =new String(char_array);
        System.out.println("The String formed is "+string);
    }
}







